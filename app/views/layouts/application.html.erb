<!DOCTYPE html>
<html>
<head>
  <title>Vidasaludable</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class='navbar'>
	<div class='navbar-inner'>
		<ul class='nav'>
			<li> <%=link_to 'Inicio', root_path %> </li>
			<% if current_user %>
				<li> <%=link_to 'Cerrar sesión', logout_path %></li>
			<% else %>
			    <li> <%=link_to 'Iniciar sesión', new_session_path %> </li>
				
			<% end %>			
			<li> <%=link_to 'Crear cuenta',new_identity_path %> </li>
			<% if current_user and current_user.tipo=="Proveedor" %>
			<li> <%=link_to 'Vender',new_product_path %> </li>
			<li> <%=link_to 'Mis productos',products_path(:user_id => current_user.id)%> </li>
			<% end %>
			<li> <%=link_to 'Comprar','/categories' %> </li>
			<li> 	
				<div id="search">
					<%= render :partial => 'products/search' %>
				</div>
			</li>
		</ul>
	</div>	

</nav>
<%= yield %>

</body>
</html>
